<div class="wrapper">
    <h1>
        <label id="minutes">00</label>:<label id="seconds">00</label>
    </h1>

    <div class="orb"></div>
</div>


<style>
    .wrapper {
        position: relative;
        width: min(80vmin, 100%);
        aspect-ratio: 2;
        margin: auto;
    }

    h1 {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #979797;
        font-family: "Tachyo", monospace;
        font-size: 700%;
        font-weight: 10;
        margin: 0;
        z-index: 1;
        mix-blend-mode: hard-light;

    }

    @property --angle {
        syntax: "<angle>";
        inherits: false;
        initial-value: 0deg;
    }

    :root {
        --bg: oklch(0.093 0.039 260.553);
        --c1: oklch(0.764 0.088 64.732);
        --c2: oklch(0.756 0.166 53.391);
        --c3: oklch(0.493 0.083 56.347);
    }

    .orb {
        display: grid;
        position: relative;
        grid-template-areas: "stack";
        inline-size: min(80vmin, 100%);
        aspect-ratio: 2;
        //overflow: hidden;
        border-radius: 50%;
        opacity: 80%;
        //filter: blur(3vmin);

        &::before,
        &::after {
            content: "";
            display: block;
            grid-area: stack;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            transform: translateZ(0);
        }

        &::before {
            background: conic-gradient(
                    from calc(var(--angle) * 2) at 25% 70%,
                    var(--c3),
                    transparent 20% 80%,
                    var(--c3)
            ),
            conic-gradient(
                    from calc(var(--angle) * 2) at 45% 75%,
                    var(--c2),
                    transparent 30% 60%,
                    var(--c2)
            ),
            conic-gradient(
                    from calc(var(--angle) * -3) at 80% 20%,
                    var(--c1),
                    transparent 40% 60%,
                    var(--c1)
            ),
            conic-gradient(
                    from calc(var(--angle) * 2) at 15% 5%,
                    var(--c2),
                    transparent 10% 90%,
                    var(--c2)
            ),
            conic-gradient(
                    from calc(var(--angle) * 1) at 20% 80%,
                    var(--c1),
                    transparent 10% 90%,
                    var(--c1)
            ),
            conic-gradient(
                    from calc(var(--angle) * -2) at 85% 10%,
                    var(--c3),
                    transparent 20% 80%,
                    var(--c3)
            );
            box-shadow: inset var(--bg) 0 0 5vmin 5vmin;
            filter: blur(3vmin) contrast(1);
            animation: rotate 20s linear infinite;
        }

        &::after {
            --dot: 1.5px;
            background-image: radial-gradient(
                    circle at center,
                    var(--bg) var(--dot),
                    transparent var(--dot)
            );
            background-size: calc(var(--dot) * 2) calc(var(--dot) * 2);
            mask-image: radial-gradient(black 25%, transparent 75%);
            backdrop-filter: blur(1vmin) contrast(10);
            mix-blend-mode: overlay;
            opacity: 20%;
        }
    }

    @keyframes rotate {
        to {
            --angle: 360deg;
        }
    }
</style>

<script>
    var minutesLabel = document.getElementById("minutes");
    var secondsLabel = document.getElementById("seconds");
    var totalSeconds = 0;
    setInterval(setTime, 1000);

    function setTime() {
        ++totalSeconds;
        secondsLabel!.innerHTML = pad(totalSeconds % 60);
        minutesLabel!.innerHTML = pad(parseInt(totalSeconds / 60));
    }

    function pad(val) {
        var valString = val + "";
        if (valString.length < 2) {
            return "0" + valString;
        } else {
            return valString;
        }
    }
</script>
