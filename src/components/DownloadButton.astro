---
import { Image } from "astro:assets";
import AppleLogo from '../assets/apple.png';
import GaramondInsetShadow from "./GaramondInsetShadow.astro";
---

<section>

	<div class="wrapper">

		<img src={AppleLogo.src} alt="Apple Logo" class="apple-logo" >
	
		<GaramondInsetShadow class="text88" >
			Download on the
			<u><a href="https://testflight.apple.com/join/jtGpAsYy">App Store</a></u>
		</GaramondInsetShadow>
	</div>

</section>

<style>

 a {
	 color: #c1c6c4;
 }
 
 section {
	 display: flex;
	 margin: 0 auto;
	 width: 100%;
	 min-height: 40rem;
 }

 .wrapper {
	 max-width: 40rem;
	 margin: auto !important;
	 display: flex;
 }
 
 :global(.text88) {
	
	 text-align: left !important;
	 line-height: 83%;
	 margin: auto !important;

 }

 .apple-logo {
	 max-width: 100%;
	 width: 200px;
 }

</style>
