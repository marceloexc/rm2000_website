---
import { Image } from "astro:assets";
import MacBookScreenImg from '../assets/macbook_pro_large.png'
---

<section>

	<Image src={MacBookScreenImg} alt="MacBook screen" width={1000} style="display: flex; margin: auto;" />

	<div class="macbook_pro_stand">
	</div>
	
</section>

<style>

 section {
	 background: radial-gradient(ellipse 70% 60%, #516068 4%, #00010f 65%);
	 width: 100%;
	 display: flex;
	 flex-direction: column;
	 min-height: 50rem;
 }

 .macbook_pro_stand {
	 padding: 4px;
	 height: 10rem;
	 background: radial-gradient(ellipse 50% 500%, #516068 4%, #00010f 65%);
 }
 

</style>

