---
import {Image} from "astro:assets"
import Logo from '../components/Logo.astro';
import Gradient from '../components/Gradient.astro';
import screenshot from '../assets/main_window.png'
import HeroImage from "./HeroImage.astro";
---

<div class="background">
	<Logo />
	<Gradient>
		<HeroImage />

		<div class="text-section">
			<h1>
				RM2000<span>
					Tape Recorder
				</span>
			</h1>

			<p>
				Easy macOS audio sampling
			</p>
		</div>
	</Gradient>
</div>

<style>
	@font-face {
		font-family: "TheNeue-Black";
		src: url("/fonts/TheNeue-Black.woff2");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "Eurostile Next LT Pro";
		src: url("/fonts/EurostileNextLTPro-SemiBoldExtended.otf");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "AUTHENTICSans-90";
		src: url("/fonts/AUTHENTICSans-90.woff2");

	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body, html {
		width: 100%;
		height: 100%;
		background: #00020e;
	}

	.background {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		flex-direction: column;
		position: relative;

	}


	.text-section {
		* {
			font-family: "AUTHENTICSans-90",serif;
			color: #bab6b0;
		}
		padding: 3em;

		span {
			font-size: 60%;
		}
	}
</style>
